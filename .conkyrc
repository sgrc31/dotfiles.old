alignment top_middle
background no
border_width 0
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=8
gap_x 155
gap_y 10
#minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_x yes
out_to_console no
out_to_ncurses no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type dock
stippled_borders 0
update_interval 3.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
Up: $uptime_short ${color #FFFF00}Kernel: $kernel | HDtemp: ${hddtemp}Â°C | temp: ${execpi 8 sensors | grep 'Core 0' | cut -c 16-22} MEM: ${membar 5,10} CPU: ${cpu 0}% @ $freq_g GHz | ${fs_free /}/${fs_size /} ${fs_bar 5,10 /} | data: ${fs_free /mnt/data}/${fs_size /mnt/data} ${fs_bar 5,10 /mnt/data} | ${if_up wlan0}wifi: ${wireless_essid wlan0} ${wireless_link_qual wlan0}% $endif | ${time %a %d %H:%M}
