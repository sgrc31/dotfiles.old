alignment top_middle
background no
border_width 0
border_inner_margin 0
border_outer_margin 0
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=8
#xftfont Inconsolata:size=8
format_human_readable 1
gap_x 155
gap_y 10
#minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_x no
out_to_console yes
out_to_ncurses no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type dock
stippled_borders 0
update_interval 3.0
uppercase no
use_spacer left
show_graph_scale no
show_graph_range no

